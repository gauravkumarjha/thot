<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="chetaru_team_post" resource="default" engine="innodb" comment="Team Member Post Table">
        <column xsi:type="int" name="post_id" unsigned="true" nullable="false" identity="true" comment="Member ID"/>
        <column xsi:type="varchar" name="name" nullable="true" length="255" comment="Member Name"/>
        <column xsi:type="varchar" name="url_key" nullable="true" length="255" comment="Member URL Key"/>
        <column xsi:type="varchar" name="designation" nullable="true" length="255" comment="Member designation"/>
        <column xsi:type="text" name="member_content" nullable="true" comment="Member Content"/>
        <column xsi:type="int" name="status" nullable="true" identity="false" default="1" comment="Member Status"/>
        <column xsi:type="varchar" name="featured_image" nullable="true" length="255" comment="Member Featured Image"/>
        <column xsi:type="varchar" name="meta_title" nullable="true" length="255" comment="Team Meta Title"/>
        <column xsi:type="text" name="meta_keywords" nullable="true" comment="Team Meta Keywords"/>
        <column xsi:type="text" name="meta_description" nullable="true" comment="Team Meta Description"/>
        <column xsi:type="timestamp" name="creation_time" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Team Post Creation Time"/>
        <column xsi:type="timestamp" name="update_time" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Team Post Modification Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="post_id"/>
        </constraint>
    </table>
</schema>
