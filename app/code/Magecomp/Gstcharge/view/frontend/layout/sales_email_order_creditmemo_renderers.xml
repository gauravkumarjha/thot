<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="sales.email.order.creditmemo.renderers">
            <block class="Magento\Sales\Block\Order\Email\Items\DefaultItems" as="default" template="Magecomp_Gstcharge::email/items/creditmemo/default.phtml" name="gst_email_creditmemo_view_renderer"/>
            <action method="setChild">
                   <argument name="alias" xsi:type="string">default</argument>
                   <argument name="block" xsi:type="string">gst_email_creditmemo_view_renderer</argument>
             </action>
            <block class="Magento\Bundle\Block\Sales\Order\Items\Renderer" name="gst_email_creditmemo_view_renderer_bundle" as="bundle" template="Magecomp_Gstcharge::email/items/creditmemo/bundle.phtml"/>
            <action method="setChild">
                <argument name="alias" xsi:type="string">bundle</argument>
                <argument name="block" xsi:type="string">gst_email_creditmemo_view_renderer_bundle</argument>
            </action>
        </referenceBlock>
    </body>
</page>
