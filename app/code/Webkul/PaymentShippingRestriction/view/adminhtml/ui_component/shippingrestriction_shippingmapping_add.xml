<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">shippingrestriction_shippingmapping_add.mapping_form_data_source</item>
            <item name="deps" xsi:type="string">shippingrestriction_shippingmapping_add.mapping_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Mapping Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">shippingrestriction_shippingmapping_add</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
         <item name="buttons" xsi:type="array">
            <item name="back.shippingrestriction" xsi:type="string">Webkul\PaymentShippingRestriction\Block\Adminhtml\Add\BackButton</item>
            <item name="save" xsi:type="array">
                <item name="name" xsi:type="string">Save</item>
                <item name="label" xsi:type="string" translate="true">Save</item>
                <item name="class" xsi:type="string">primary</item>
            </item>
        </item>
    </argument>
    <dataSource name="mapping_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Webkul\PaymentShippingRestriction\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">mapping_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="map_category_attributes">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Map Shipping With Payments</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="shipping_code">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Webkul\PaymentShippingRestriction\Model\Config\Source\ShippingOptions</item>
                <item name="config" xsi:type="array">
                    <item name="additionalClasses" xsi:type="string">my-custom-class</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Select Shipping Methods</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">shipping_code</item>
                    <item name="dataScope" xsi:type="string">shipping_code</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="payment_code">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Webkul\PaymentShippingRestriction\Model\Config\Source\PaymentOptions</item>
                <item name="config" xsi:type="array">
                    <item name="additionalClasses" xsi:type="string">my-custom-class</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Select Payment Methods</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="source" xsi:type="string">payment_code</item>
                    <item name="dataScope" xsi:type="string">payment_code</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form> 



