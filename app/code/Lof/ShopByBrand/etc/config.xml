                <all_brand_text>All Brands</all_brand_text>
                <show_brand_name>1</show_brand_name>
                <show_tooltip>1</show_tooltip>
                <show_featured_brands>1</show_featured_brands>
            </brand_list_page>
        </lof_shopbybrand>
    </default>
</config>
