<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Lof\ShopByBrand\Block\Adminhtml\Items" name="adminhtml.block.promo.quote.grid.container">
                <block class="Magento\Backend\Block\Widget\Grid" name="adminhtml.block.promo.quote.grid" as="grid">
                    <arguments>
                        <argument name="id" xsi:type="string">ves_brand</argument>
                        <argument name="dataSource" xsi:type="object">Lof\ShopByBrand\Model\ResourceModel\Items\Collection</argument>
                        <argument name="default_sort" xsi:type="string">creation_time</argument>
                        <argument name="default_dir" xsi:type="string">ASC</argument>
                        <argument name="save_parameters_in_session" xsi:type="string">1</argument>
                    </arguments>
                    <block class="Magento\Backend\Block\Widget\Grid\ColumnSet" as="grid.columnSet" name="adminhtml.promo.quote.grid.columnSet">
                        <arguments>
                            <argument name="rowUrl" xsi:type="array">
                                <item name="path" xsi:type="string">vesbrand/brand/edit</item>
                                <item name="extraParamsTemplate" xsi:type="array">
                                    <item name="brand_id" xsi:type="string">getId</item>
                                </item>
                            </argument>
                        </arguments>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">ID</argument>
                                <argument name="index" xsi:type="string">brand_id</argument>
                                <argument name="column_css_class" xsi:type="string">col-id</argument>
                                <argument name="header_css_class" xsi:type="string">col-id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="name">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Name</argument>
                                <argument name="index" xsi:type="string">name</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="url_key">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Url Key</argument>
                                <argument name="index" xsi:type="string">url_key</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="status">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Status</argument>
                                <argument name="index" xsi:type="string">status</argument>
                                <argument name="type" xsi:type="string">options</argument>
                                <argument name="options" xsi:type="options" model="Lof\ShopByBrand\Model\Status"/>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="position">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Position</argument>
                                <argument name="index" xsi:type="string">position</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="featured">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Featured</argument>
                                <argument name="index" xsi:type="string">featured</argument>
                                <argument name="type" xsi:type="string">options</argument>
                                <argument name="options" xsi:type="options" model="Lof\ShopByBrand\Model\Status"/>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="attribute_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Attribute Option ID</argument>
                                <argument name="index" xsi:type="string">attribute_id</argument>
                            </arguments>
                        </block>
                        <block class="Magento\Backend\Block\Widget\Grid\Column" as="attribute_option_id">
                            <arguments>
                                <argument name="header" xsi:type="string" translate="true">Attribute Option Value</argument>
                                <argument name="index" xsi:type="string">attribute_option_id</argument>
                            </arguments>
                        </block>
                    </block>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
