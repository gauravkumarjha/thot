<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<head>
		<css src="Lof_ShopByBrand::css/alphabet_styles.css" />
	</head>
	<body>
		<referenceContainer name="content">
			<block class="Ves\Brand\Block\BrandList" name="featured_brands" ifconfig="lof_shopbybrand/brand_list_page/show_featured_brands">
				<arguments>
					<argument name="filter_featured" xsi:type="string">1</argument>
					<argument name="number_item_per_column" xsi:type="string">1</argument>
				</arguments>
			</block>
			<block class="Lof\ShopByBrand\Block\ShopByBrandpage" name="lofbrand.list">
				<block class="Ves\Brand\Block\Toolbar" name="lofshopbybrand_toolbar" template="Ves_Brand::toolbar.phtml">
					<block class="Magento\Theme\Block\Html\Pager" name="brand_list_toolbar_pager"/>
				</block>
				<block class="Magento\Framework\View\Element\Template" name="brand.alphabetsearchform.main" template="Lof_ShopByBrand::search/alphabet_search_form.phtml" before="-"/>
			</block>
		</referenceContainer>
	</body>
</page>
