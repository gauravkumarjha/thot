<script>
    require(['jquery', 'Magento_Catalog/js/price-utils'], function($, priceUtils) {
        $(document).ready(function() {
           // jQuery(document).find(".switch-prices").css("display", "none");

 
            $('.gift-swatch-options .swatch-option').on('click', function() {
                $('.gift-swatch-options .swatch-option').removeClass('selected');
                $(this).addClass('selected');
                $(document).find('#manual-price').css("display", "none");
                if ($(this).data('price') != "") {
                    $('#gift-prices').val($(this).data('price')).trigger('change');
                    $(document).find('#manual-price').val($(this).data('price'));
                    $(document).find('.product-info-main .price-wrapper .price').text($(this).data('pricewithcurrency'));
                    $(document).find(".giftcard-amount .preview_amount").html($(this).data('pricewithcurrency'));
                } else {
                    $(document).find(".giftcard-amount .preview_amount").html('');
                    $(document).find('#manual-price').val('');
                    jQuery(".switch-prices").trigger("click");
                    $(document).find('#manual-price').css("display", "inline-block");
                }
            });
            $('#manual-price').on('input', function() {
                var value = $(this).val();
                var currencyRate = '<?= /* @noEscape */ __($currency_rate); ?>';
                var originalPrice = value = $(this).val();;
                var convertedPrice = originalPrice * currencyRate;
                var selectedValue = priceUtils.formatPrice(convertedPrice);
                $(document).find(".giftcard-amount .preview_amount").html(selectedValue);

            });

            $(document).on('input', '[data-binds]', function() {
                const key = $(this).data('binds');
                const value = $(this).val();

                const selector = $('.' + key);
                if (selector.length) {
                    selector.html(value);
                }
            });



            jQuery(document).find('.querieswrap').insertAfter('.product-info-main');
            jQuery('#sendAsGift').on('change', function(){
            if(jQuery(this).is(':checked')){
            jQuery('.custompopup-wrap').fadeIn(); 
            } else {
            jQuery('.custompopup-wrap').fadeOut();
            }
            });

            jQuery('.closecustom-popup').on('click', function(){
            jQuery('.custompopup-wrap').fadeOut();

            })


            jQuery('.giftcard-preview-title').on('click', function(){
            jQuery('.preview-wrap').fadeIn();
            });
            jQuery('.closeipreview').on('click', function(){
            jQuery('.preview-wrap').fadeOut();
            });





        });
    });
