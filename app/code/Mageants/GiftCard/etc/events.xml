<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="checkout_cart_product_add_after">
        <observer name="giftcertificate" instance="Mageants\GiftCard\Observer\Savegift" />
    </event>
	<event name="sales_order_place_after">
         <observer name="ordercertificate" instance="Mageants\GiftCard\Observer\Ordergift" />
    </event>
    <event name="controller_action_postdispatch">
        <observer name="giftcertificate_avialaibility" instance="Mageants\GiftCard\Observer\CheckStatus" />
    </event>
    <event name="sales_quote_remove_item">
        <observer name="remove_giftcertificate" instance="Mageants\GiftCard\Observer\Removegift" />
    </event>
    <event name="sales_order_invoice_pay">
        <observer name="send_giftcertificate_mail" instance="Mageants\GiftCard\Observer\SendGiftcertificateMail" />
    </event>
    <event name="controller_action_predispatch_checkout_index_index">
        <observer name="checkcout_page" instance="Mageants\GiftCard\Observer\CheckShoppingCartObserver" />
    </event>
    <event name="layout_generate_blocks_after">
        <observer name="giftCategory" instance="Mageants\GiftCard\Observer\GiftCategory" />
    </event>    
    <event name="checkout_cart_add_product_complete">
        <observer name="giftquoteupdate" instance="Mageants\GiftCard\Observer\QuoteUpdate" />
    </event>

	<event name="sales_order_place_before">
         <observer name="ordercertificate" instance="Mageants\GiftCard\Observer\OrderPlaceBeforeObserver" />
    </event>
    <event name="controller_action_predispatch_checkout_cart_index">
        <observer name="vendor_module_cart_index_load_observer" instance="Mageants\GiftCard\Observer\CartIndexLoadObserver" />
    </event>
</config>