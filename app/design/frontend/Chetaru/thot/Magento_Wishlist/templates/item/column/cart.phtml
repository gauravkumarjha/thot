<script>
    function incrementQty(itemId) {
        var qtyInput = document.getElementById('qty['+itemId+']');
        if (qtyInput) {
            var currentValue = parseInt(qtyInput.value);
            qtyInput.value = currentValue + 1;
        }
    }

    function decrementQty(itemId) {
        var qtyInput = document.getElementById('qty['+itemId+']');
        if (qtyInput) {
            var currentValue = parseInt(qtyInput.value);
            if (currentValue > 1) {
                qtyInput.value = currentValue - 1;
            }
        }
    }
