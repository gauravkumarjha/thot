<?php $_product = $block->getProduct(); ?>

<?php
$new_layout = array(137);
$categories = $_product->getCategoryIds();
$result = array_intersect($new_layout, $categories);
$social_medai_image = $_product->getData( 'social_media_image' );
if( empty($result) ){ ?>
<?php
$gallery=json_decode($block->getGalleryImagesJson());
$newGalleryJson = array();
 $counter=0;
 foreach($gallery as $ga){ 
    if($social_medai_image != null && strpos($ga->thumb,$social_medai_image) ) {
        continue;
    }
     if(strpos($ga->caption, 'support:')===false){
         $imageLabel = ($ga->caption != null && $ga->caption != "") ? $ga->caption : $_product->getName() . " - The House Of Things";
         $newGalleryJson[$counter]['thumb']=$ga->thumb;
         $newGalleryJson[$counter]['img']=$ga->img;
         $newGalleryJson[$counter]['full']=$ga->full;
         $newGalleryJson[$counter]['caption']= $imageLabel;
         $newGalleryJson[$counter]['position']=$ga->position;
         $newGalleryJson[$counter]['isMain']=$ga->isMain;
        }
     $counter++;
 }

$images = $block->getGalleryImages()->getItems();
$mainImage = current(array_filter($images, function ($img) use ($block) {
    return $block->isMainImage($img);
}));

if (!empty($images) && empty($mainImage)) {
    $mainImage = $block->getGalleryImages()->getFirstItem();
}

$helper = $block->getData('imageHelper');
$mainImageData = $mainImage ?
    $mainImage->getData('medium_image_url') :
    $helper->getDefaultPlaceholderUrl('image');

?>

<div class="gallery-placeholder _block-content-loading" data-gallery-role="gallery-placeholder">
    <img
        alt="<?php echo $_product->getName() . " - The House Of Things" ?>"
        class="gallery-placeholder__image"
        src="<?= /* @noEscape */ $mainImageData ?>"
    />
</div>
