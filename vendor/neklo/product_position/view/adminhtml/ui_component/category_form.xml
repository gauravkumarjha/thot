<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="neklo_productposition">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Visual Product Position</item>
                <item name="additionalClasses" xsi:type="string">neklo-product-position-tab</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">41</item>
            </item>
        </argument>
        <container name="neklo_productposition_container">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">161</item>
                </item>
            </argument>
            <htmlContent name="html_content">
                <block template="Neklo_ProductPosition::category/tab/product/position.phtml"
                       name="neklo.productposition.position.block" after="-">
                    <arguments>
                        <argument name="configuration" xsi:type="object">Neklo\ProductPosition\ViewModel\Configuration</argument>
                        <argument name="product" xsi:type="object">Neklo\ProductPosition\ViewModel\Product</argument>
                        <argument name="url" xsi:type="object">Neklo\ProductPosition\ViewModel\Url</argument>
                    </arguments>
                </block>
            </htmlContent>
        </container>
    </fieldset>
</form>
